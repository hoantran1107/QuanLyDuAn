@model IEnumerable<QLKS.Models.tblPhieuDatPhong>

@{
    ViewBag.Title = "Danh sách phiếu đặt phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header id="gtco-header" class="gtco-cover gtco-cover-md g-header" role="banner" style="background-image: url(/Content/Home/images/img_bg_1.jpg)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
</header>
<div class="container">
    <br /><br /><br /><br />
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@ViewBag.title</h3>
        </div>
        <div class="panel-body">
            <table class="table table-bordered" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            STT
                        </th>
                        <th>
                            Số phòng
                        </th>
                        <th>
                            Ngày vào
                        </th>
                        <th>
                            Ngày dự kiến ra
                        </th>
                        <th>
                            Tình trạng
                        </th>
                        @*<th>Option</th>*@
                    </tr>
                </thead>

                <tbody>
                    @{ 
                        int stt = 0;
                    }
                    @foreach (var item in Model)
                    {
                        stt++;
                    <tr>
                        <td>
                            @stt
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tblPhong.so_phong)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ngay_vao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ngay_ra)
                        </td>
                        @if (item.tblTinhTrangPhieuDatPhong.ma_tinh_trang == 4 || item.tblTinhTrangPhieuDatPhong.ma_tinh_trang == 2)
                        {
                            <td class="alert-success">
                                @Html.DisplayFor(modelItem => item.tblTinhTrangPhieuDatPhong.tinh_trang)
                            </td>
                        }
                        else if (item.tblTinhTrangPhieuDatPhong.ma_tinh_trang == 1)
                        {
                            <td class="alert-warning">
                                @Html.DisplayFor(modelItem => item.tblTinhTrangPhieuDatPhong.tinh_trang)
                            </td>
                            //<td>@Html.ActionLink("Sửa", "SuaPhieuDatPhong", new { id = item.ma_pdp })</td>
                        }
                        else
                        {
                            <td class="alert-danger">
                                @Html.DisplayFor(modelItem => item.tblTinhTrangPhieuDatPhong.tinh_trang)
                            </td>
                        }

                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>